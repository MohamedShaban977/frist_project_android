<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:gravity="center"
    android:background="@drawable/but_base_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/btn_loading_layout_progressbar"
            android:visibility="gone"
            android:indeterminateTint="@color/purple_200"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/btn_loading_layout_iv"
            android:background="@drawable/btn_loading_layout_iv"
            android:src="@drawable/ic_done"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/image" />
        <TextView
            android:id="@+id/btn_loading_layout_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="@font/cairo"
            android:inputType="text"
            android:text="@string/login"
            android:textColor="#9575CD"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextViewEdits,UnusedAttribute" />
    </LinearLayout>

</LinearLayout>